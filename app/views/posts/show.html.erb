<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @post.title %>
</p>

<p>
  <strong>Desc:</strong>
  <%= @post.desc %>
</p>

<p>
  <strong>User:</strong>
  <%= @post.user.email %>
</p>

<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %>

<%= link_to 'Add Comment', new_post_comment_path(@post, @comment), class: 'btn btn-primary btn-sm btn-block' %>

<% Comment.all.each do |comment| %>
  <% if comment.post_id == @post.id %>
    <%= render 'comments/comment', comment: comment %>
  <% end %>
<% end %>